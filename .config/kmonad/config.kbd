  ;; symbols
)

(defsrc
 esc  1    2    3    4    5    6    7    8    9    0    -    =    \    grv
 tab  q    w    e    r    t    y    u    i    o    p    [    ]    bspc
 lctl a    s    d    f    g    h    j    k    l    ;    '    ret
 lsft z    x    c    v    b    n    m    ,    .    /    rsft wkup
      lalt lmet           spc            rmet ralt
)

(deflayer default
 @esm 1    2    3    4    5    6    7    8    9    0    -    =    \    grv
 tab  q    w    e    r    t    y    u    i    o    p    [    ]    bspc
 lctl a    s    d    f    g    h    j    k    l    ;    '    ret
 lsft z    x    c    v    b    n    m    ,    .    /    rsft wkup
      lalt lmet           spc            @ly2 @ly3
)

(deflayer layer2
 _    @m1  @m2  @m3  @m4  @m5  @m6  @m7  @m8  @m9  @m10 @m11 @m12 _    _
 _    @web up   @ems _    _    _    _    _    _    _    _    _    _
 _    left down rght _    _    _    _    _    _    _    _    _
 _    _    _    _    _    _    _    _    _    _    _    _    _
      _    _              _              _    _
)

(deflayer layer3
